<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetronomeActivity">
    <ImageView
            android:id="@+id/pendlumImage"
            android:src="@drawable/img1"
            android:layout_width="314dp"
            android:layout_height="726dp"
            android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img2"/>
    <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/addTempoButton" android:background="@drawable/add_img"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/subTempoButton"/>
    <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/subTempoButton" android:background="@drawable/sub_img"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/startStopButton"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/startStopButton"
            android:background="@drawable/start_btn_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="46dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempoLabel" android:textSize="100sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>